<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">


    <Button
        android:id="@+id/btnShutter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/camera"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"/>
    <Button
        android:id="@+id/myIntent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/check49"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/da"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/da"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/seekBar"
        android:layout_marginRight="10dp"/>
    <Button
        android:id="@+id/xiao"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/xiao"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/lblRecogResult"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="32sp"
        android:layout_toLeftOf="@+id/myIntent" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:max="100"
        android:progress="0"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
